# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  approve_changes_to_own_configuration:
    if:
      - {{ files | match(regex=r/JENNY\//) | every }}
      - {{ (pr.author | match(list=members) | some) or (pr.author_teams | match(list=teams) | some) }}
    run:
      - action: add-label@v1
        args:
          label: "{{ calc.etr }} min review"
          color: "36A853"
      - action: approve@v1

members:
 - "Korotovskykh"

teams: []
